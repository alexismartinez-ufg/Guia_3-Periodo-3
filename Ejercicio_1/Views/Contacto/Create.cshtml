@model Ejercicio_1.DAL.Models.Contacto

@{
    ViewBag.Title = "Crear Contacto";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center bg-light">
            <h4 class="card-title text-primary">Crear Contacto</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" asp-controller="Contacto" method="post">
                <div class="form-group">
                    <label for="Nombres">Nombres</label>
                    <input type="text" id="Nombres" name="Nombres" class="form-control" placeholder="Ingrese los nombres del contacto" required>
                </div>

                <div class="form-group">
                    <label for="Apellidos">Apellidos</label>
                    <input type="text" id="Apellidos" name="Apellidos" class="form-control" placeholder="Ingrese los apellidos del contacto" required>
                </div>

                <div class="form-group">
                    <label for="Telefono">Teléfono</label>
                    <input type="text" id="Telefono" name="Telefono" class="form-control" placeholder="Ingrese el teléfono del contacto" required>
                </div>

                <div class="form-group">
                    <label for="Correo">Correo Electrónico</label>
                    <input type="email" id="Correo" name="Correo" class="form-control" placeholder="Ingrese el correo electrónico del contacto" required>
                </div>

                <div class="mt-3 text-center">
                    <button type="submit" class="btn btn-outline-primary mt-3">Guardar Contacto</button>
                    <a href="@Url.Action("Index", "Contacto")" class="btn btn-outline-secondary mt-3">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>